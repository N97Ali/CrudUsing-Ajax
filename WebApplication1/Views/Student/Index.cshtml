@model IEnumerable<WebApplication1.Model.Student>

<!Doctype>
<html>
<head>
    <title>Students </title>
</head>
<body>
    <div class="container">
        <div class="">
            <h3>Students Data </h3>
        </div>
        <div class=" text-end">
            <a class="btn btn-primary" asp-action="Add" asp-controller="Student">Add</a>
        </div>
    </div>
    <div>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>
                        id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Course
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody >
                @foreach(var item in Model )
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Course
                        </td>
                        <td>
                            @item.Gender
                        </td>
                        <td>
                           <a class="btn btn-primary " asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a>
                           <a class="btn btn-danger " asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>